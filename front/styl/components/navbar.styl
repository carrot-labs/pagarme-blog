$navbar-background = #484848
$navbar-color = #a4a4a4

.navbar
  @extend .cf
  width 100%
  background $navbar-background
  color $navbar-color

  &__inner
    @extend .container
    padding-top rem(27px)
    padding-bottom rem(27px)
    display flex
    flex-direction row
    align-items center

  &__brand
    text-transform uppercase
    font-style italic
    font-size 1.375rem
    display flex
    align-items center

    strong
      margin-right .3rem

  &__brand__logo
    width 2.875rem
    margin-right 1rem

  &__separator
    width rem(1px)
    height rem(56px)
    margin 0 2rem
    background rgba(0,0,0,.49)

  &__menu
    ul
      margin 0
      padding 0
      list-style none
    li
      display inline-block
      padding-right 1.3rem
    a
      text-decoration none
      color $navbar-color
      font-size 1rem
      transition all .4s $transition-bezier
      &:hover
        color darken($navbar-color, 15%)
        transition all .4s $transition-bezier

  &__newsletter
    margin-left auto
    font-size 1rem
    input
      width 280px
      position relative
      left 4px
      padding rem(7px) rem(20px)
      background transparent
      border 1px solid rgba(#e5e5e5, .3)
      border-right-color transparent
      border-top-left-radius rem(2px)
      border-bottom-left-radius rem(2px)
      font-size rem(15px)
      line-height $line-height-base
      &:focus
        outline 0
        box-shadow 0px 0px 2px rgba(#b2b2b2, .2)
        border-color #b2b2b2
    button
      padding rem(8.5px) 1rem
      background transparent
      border 1px solid #b2b2b2
      border-radius rem(2px)
      text-transform uppercase
      font-size rem(14px)
      font-style italic
      font-weight 600
      color white
      transition all .28s $transition-bezier
      &:hover
        background white
        border-color white
        color $black-text
        transition all .28s $transition-bezier
      &:focus
        outline 0
    i 
      position relative
      left 4px

