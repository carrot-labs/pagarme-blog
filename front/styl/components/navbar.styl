$navbar-background = #484848
$navbar-color = #a4a4a4
$navbar-toggle-button-size = 2rem

.navbar
  @extend .cf
  width 100%
  background $navbar-background
  color $navbar-color

  &__inner
    @extend .container
    padding-top rem(27px)
    padding-bottom rem(27px)
    display flex
    flex-direction row
    align-items center

  &__toggle
    right 0
    margin-left auto
    display inline-block
    padding ($navbar-toggle-button-size/4) ($navbar-toggle-button-size/8)
    transition .3s
    cursor pointer
    user-select none
    z-index 9000
    &:hover
      opacity 1
    &:active
      transition 0
    +above('md')
      display none

    &__lines
      position relative
      display inline-block
      width $navbar-toggle-button-size
      height ($navbar-toggle-button-size/8)
      background $navbar-color
      border-radius 1rem
      transition .3s
      &:before
      &:after
        @extend .navbar__toggle__lines
        position absolute
        left 0
        content ''
        transform-origin ($navbar-toggle-button-size/14) center
      &:before
        top -($navbar-toggle-button-size/3.5)
      &:after
        top ($navbar-toggle-button-size/3.5)
    &--active
      @extend .navbar__toggle
    &--active &__lines
      background transparent
      /*overlay the lines by setting both their top values to 0*/
      &:before
      &:after
        transform-origin 50% 50%
        top 0
        width $navbar-toggle-button-size
      &:before
        transform rotate3d(0,0,1,45deg)
      &:after
        transform rotate3d(0,0,1,-45deg)

  &__responsive-menu
    transform scale(.1)
    transform-origin 100% 0%
    opacity 0
    transition all .28s $transition-bezier
    position fixed
    overflow auto
    top 0
    left 0
    z-index 100
    width 100%
    height 100%
    min-height 100vh
    padding rem(30px) 0
    background $navbar-background
    &--open
      @extend .navbar__responsive-menu
      opacity 1
      transform scale(1)
      transition all .28s $transition-bezier

    +above('md')
      display none
    > *
      @extend .container
      text-align center
    ul
      // margin 0
      list-style none
    hr
      width 100%
      height 1px
      margin rem(70px) auto rem(30px)
      background rgba($navbar-color, .4)

    li
      text-align center
      border 1px solid rgba($navbar-color, .40)
      border-bottom none
      &:first-child
        border-top-left-radius 4px
        border-top-right-radius 4px
        border-color white
        a
          font-weight 700
          font-style italic
          color $black-text
          background white
          border-top-left-radius 4px
          border-top-right-radius 4px


      &:last-child
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px
        border-bottom 1px solid rgba($navbar-color, .40)
    a
      width 100%
      padding 1rem 0
      display table
      font-style italic
      text-transform uppercase
      font-weight 600

      text-decoration none
      color $navbar-color
      font-size 1.2rem
      transition all .4s $transition-bezier
      &:hover
        color darken($navbar-color, 15%)
        transition all .4s $transition-bezier

  &__brand
    z-index 1000
    text-transform uppercase
    font-style italic
    font-size 1.375rem
    display flex
    align-items center

    strong
      margin-right .3rem

  &__brand__logo
    width 2.875rem
    margin-right 1rem

  &__separator
    width rem(1px)
    height rem(56px)
    margin 0 2rem
    background rgba(0,0,0,.49)
    display none
    +above('md')
      display block

  &__menu
    display none
    +above('md')
      display block
    ul
      margin 0
      padding 0
      list-style none
    li
      display inline-block
      padding-right 1.3rem
      &:last-child
        padding-right 0
    a
      text-decoration none
      color $navbar-color
      font-size 1rem
      transition all .4s $transition-bezier
      &:hover
        color darken($navbar-color, 15%)
        transition all .4s $transition-bezier

  &__newsletter
    margin-left auto
    font-size 1rem
    display none
    +above('xl')
      display block
    input
      width rem(280px)
      position relative
      left 4px
      padding rem(7px) rem(20px)
      background transparent
      border 1px solid rgba(#e5e5e5, .3)
      border-right-color transparent
      border-top-left-radius rem(2px)
      border-bottom-left-radius rem(2px)
      font-size rem(15px)
      line-height $line-height-base
      &:focus
        outline 0
        box-shadow 0px 0px 2px rgba(#b2b2b2, .2)
        border-color #b2b2b2
    button
      padding rem(8.5px) 1rem
      background transparent
      border 1px solid #b2b2b2
      border-radius rem(2px)
      text-transform uppercase
      font-size rem(14px)
      font-style italic
      font-weight 600
      color white
      transition all .28s $transition-bezier
      &:hover
        background white
        border-color white
        color $black-text
        transition all .28s $transition-bezier
      &:focus
        outline 0
    i
      position relative
      left 4px
